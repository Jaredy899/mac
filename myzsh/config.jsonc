{
    "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
    "display": {
        "separator": "   ",
        "color": "cyan"
    },
    "modules": [
        {
            "type": "custom",
            "format": "┌──────────────────── \u001b[1;36mSystem Information\u001b[0m ───────────────────┐"
        },
        {
            "type": "host",
            "key": "  󰌢"
        },
        {
            "type": "cpu",
            "key": "  "
        },
        {
            "type": "gpu",
            "detectionMethod": "pci",
            "key": "  "
        },
        {
            "type": "display",
            "key": "  󱄄"
        },
        {
            "type": "memory",
            "key": "  "
        },
        {
            "type": "disk",
            "key": "  "
        },
        {
            "type": "battery",
            "key": "  "
        },
        {
            "type": "custom",
            "format": "├─────────────────── \u001b[1;32mSoftware Information\u001b[0m ──────────────────┤"
        },
        {
            "type": "os",
            "key": "  "
        },
        {
            "type": "kernel",
            "key": "  ",
            "format": "{1} {2}"
        },
        // {
        //     "type": "wm",
        //     "key": "  "
        // },
        {
            "type": "shell",
            "key": "  "
        },
        {
            "type": "processes",
            "key": "  󰧑",
            "format": "{1} (Processes)"
        },
        {
            "type": "packages",
            "key": "  "
        },
        {
            "type": "custom",
            "format": "├─────────────────── \u001b[1;33mNetwork & Date\u001b[0m ─────────────────────┤"
        },
        {
            "type": "datetime",
            "key": "  "
        },
        {
            "type": "localip",
            "showIpv6": false,
            "showMac": false,
            "key": "  󰩠"
        },
        {
            "type": "command",
            "key": "  󰩠",
            "keyColor": "blue",
            "text": "tailscale_ip=$(tailscale ip -4); echo $tailscale_ip"
        },
        // {
        //     "type": "weather",
        //     "timeout": 1000,
        //     "key": "  "
        // },
        {
            "type": "custom",
            "format": "├───────────────────── \u001b[1;35mSystem Status\u001b[0m ───────────────────────┤"
        },
        {
            "type": "command",
            "key": "  OS Age ",
            "keyColor": "magenta",
            "text": "birth_install=$(stat -c %W /); current=$(date +%s); time_progression=$((current - birth_install)); days_difference=$((time_progression / 86400)); echo $days_difference days"
        },
        {
            "type": "uptime",
            "key": "  Uptime ",
            "keyColor": "magenta"
        },
        {
            "type": "custom",
            "format": "└───────────────────────────────────────────────────────────┘"
        },
        {
            "type": "colors",
            "paddingLeft": 2,
            "symbol": "circle"
        }
    ]
}
